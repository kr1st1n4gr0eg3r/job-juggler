  {
    "manifest_version": 3,
   "name": "JobJuggler",
    "version": "1.0",
    "description": "A Chrome extension that will highlight or hide certain parameters as needed in your arduous job hunt.",
    "permissions": ["activeTab", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "assets/icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "icons": {
      "48": "assets/icon.png"
    }
  }
  